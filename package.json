{
  "name": "Leaderboard",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "reset": "rm -rf /tmp/metro-* && watchman watch-del-all && npm start --reset-cache",
    "ci:pr": "npm ci && npm run lint && npm run test",
    "ci:tag": "npm ci && npm run e2e:ci",
    "e2e:ci": "detox build -c android.emu.release && detox test -c android.emu.release",
    "e2e": "detox build -c android.emu.debug && detox test -c android.emu.debug",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.7",
    "@react-native-firebase/app": "^6.3.4",
    "@react-native-firebase/auth": "^6.3.4",
    "@react-native-firebase/firestore": "^6.3.4",
    "@react-navigation/native": "^5.1.4",
    "@react-navigation/stack": "^5.2.9",
    "formik": "^2.1.4",
    "ramda": "^0.27.0",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-formik": "^1.7.8",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-hide-with-keyboard": "^1.2.1",
    "react-native-paper": "^3.8.0",
    "react-native-reanimated": "^1.7.1",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.4.0",
    "react-native-vector-icons": "^6.6.0",
    "styled-components": "^5.1.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.7",
    "@types/detox": "^14.5.2",
    "@types/jest": "^24.0.24",
    "@types/ramda": "^0.27.3",
    "@types/react-native": "^0.61.15",
    "@types/react-native-material-textfield": "^0.16.3",
    "@types/react-test-renderer": "16.9.1",
    "@types/styled-components": "^5.0.1",
    "@types/yup": "^0.26.35",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "detox": "^16.0.2",
    "eslint": "^6.5.1",
    "eslint-plugin-detox": "^1.0.0",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "prettier": "^1.19.1",
    "react-native-material-textfield": "^0.16.1",
    "react-native-testing-library": "^1.13.0",
    "react-test-renderer": "16.9.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|@?react-navigation|@?react-native-community)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/e2e/"
    ],
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "detox": {
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_5X_API_28"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_5X_API_28"
        }
      }
    },
    "test-runner": "jest"
  }
}
